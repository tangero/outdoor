---
layout: page
---

<div class="home">
    <div id="categories">
        <section class="bg"></section>
        <!-- Obsah rubriky (z index.md) -->

            <div class="category-content">
                {{ content }}
            </div>

    <!-- Získání názvu adresáře -->
    {% assign current_category = page.path | split: '/' | first %}

    <!-- Seznam článků v aktuální kategorii -->
    {% assign articles = site.posts | where: "categories", current_category %}
    {% if articles.size > 0 %}
    <div class="category-articles">
        <h2>Články v rubrice</h2>
        <ul>
            {% for post in articles %}
            <li>
                <a href="{{ post.url | relative_url }}">
                    <h3>{{ post.title }}</h3>
                    <p class="meta">{{ post.date | date: "%B %-d, %Y" }}</p>
                </a>
            </li>
            {% endfor %}
        </ul>
    </div>
    {% endif %}
</div>