---
layout: page
---

<div class="home">
    <div id="categories">
        <section class="bg"></section>
        <!-- Obsah rubriky (z index.md) -->

            <div class="category-content">
                {{ content }}
            </div>

<!-- Seznam článků v rubrice -->
<p>{{ page.name }}</p>

        {% assign rubrika_clanky = site.posts | where: "categories", page.name %}
        {% if rubrika_clanky.size > 0 %}
        <div class="category-groups">
            <h2>Články v rubrice</h2>
            <div class="items">
                {% for post in rubrika_clanky %}
                    <a href="{{ post.url | relative_url }}" class="category-post-link">
                        <div class="item">
                            <p class="meta">{{ post.date | date: site.data.language.str_date_format | default: '%B %-d, %Y' }}</p>
                            <p class="title">{{ post.title }}</p>
                        </div>
                    </a>
                {% endfor %}
            </div>
        </div>
        {% endif %}
    </div>
</div>