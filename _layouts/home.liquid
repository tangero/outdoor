---
layout: default
---
<div class="home">
    <style scoped>
        .call-out_img {
            background-image: url('/assets/img/header/triangular.jpeg');
        }

        @media screen and (max-width: 768px) {
            .call-out_img {
                background-image: url('/assets/img/header/triangular-medium.jpeg');
            }
        }

        @media screen and (max-width: 576px) {
            .call-out_img {
                background-image: url('/assets/img/header/triangular-small.jpeg');
            }
        }
    </style>

    <div id="main" class="call-out call-out_img">
        <h1> {{ site.header_text | default: "Výbavu na trail, do hor, do přírody? Poradím!" }} </h1>
    </div>

    <div class="rubriky">
        <div class="categories">
            {% for rubrika in site.data.rubriky %}
            <div class="category">
                <a href="{{ site.baseurl }}/{{ rubrika.name }}/">
                    <img src="{{ site.baseurl }}{{ rubrika.icon }}" alt="{{ rubrika.title }}">
                    <span>{{ rubrika.title }}</span>
                </a>
            </div>
            {% endfor %}
        </div>
    </div>

    <div class="blog">
        {% capture _blog %}{% include blog/blog.liquid %}{% endcapture %}
        {{ _blog | split: " " | join: " "}}
    </div>
</div>